{
  // Editor
  "editor.formatOnSave": true,

  // Python
  "python.venvPath": "${env:HOME}/.pyenv",
  "python.linting.pylintEnabled": false,
  "python.pythonPath": "${env:HOME}/.pyenv/versions/3.7.7/bin/python",

  // Python formatting with yapf
  "python.formatting.provider": "yapf",
  "python.formatting.yapfArgs": [
    "--style",
    "{based_on_style: pep8, indent_width: 4}"
  ],

  // File
  "files.exclude": {
    "**/*.pyc": true,
    "**/*.map": true,
    "**/*__pycache__": true
  }
}
